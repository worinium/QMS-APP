<UserControl
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:QMS.GUI.Views" x:Name="ucBtnMenu" x:Class="QMS.GUI.Views.ServiceList"
             prism:ViewModelLocator.AutoWireViewModel="True"
              mc:Ignorable="d"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}" MinHeight="500" MinWidth="500" Loaded="ucLoaded">

    <Grid x:Name="myGrid" Loaded="myGrid_Loaded">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.9,1" StartPoint="0.12,0">
                <GradientStop  Color="#FFF7F7F7" Offset="2"/>
                <GradientStop Color="BlueViolet" />
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>

</UserControl>
